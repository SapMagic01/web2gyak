<div class="bg-white p-6 rounded-xl shadow-lg">
    <div class="flex justify-between items-center mb-8 border-b pb-4">
        <h2 class="text-3xl font-bold text-gray-800">Adminisztráció (CRUD)</h2>
        <span class="bg-red-100 text-red-800 px-3 py-1 rounded font-bold text-sm">ADMIN</span>
    </div>

    <div class="mb-10 bg-blue-50 p-6 rounded-lg border border-blue-200">
        <h3 class="text-lg font-bold mb-3 text-blue-800">Új Húzás Létrehozása</h3>
        <form action="{{@root.basePath}}/crud/add" method="POST" class="flex gap-4 items-end">
            <div>
                <label class="block text-xs font-bold text-gray-700 uppercase">Év</label>
                <input type="number" name="ev" placeholder="2025" required class="border p-2 rounded w-24">
            </div>
            <div>
                <label class="block text-xs font-bold text-gray-700 uppercase">Hét</label>
                <input type="number" name="het" placeholder="1" required class="border p-2 rounded w-24">
            </div>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded font-bold hover:bg-blue-700">
                Létrehozás
            </button>
        </form>
    </div>

    <h3 class="text-xl font-bold mb-4 text-gray-700">Rögzített Húzások és Adataik</h3>

    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse border border-gray-200">
            <thead>
            <tr class="bg-gray-800 text-white text-sm">
                <th class="p-3 border w-24">Időpont</th>
                <th class="p-3 border w-1/3">Kihúzott Számok</th>
                <th class="p-3 border w-1/3">Nyeremények</th>
                <th class="p-3 border text-center">Művelet</th>
            </tr>
            </thead>
            <tbody class="text-sm">
            {{#each items}}
                <tr class="border-b hover:bg-gray-50 align-top">

                    <td class="p-3 border font-bold text-gray-700">
                        {{this.ev}}.<br>
                        {{this.het}}. hét
                        <div class="text-xs text-gray-400 font-normal mt-1">ID: {{this.id}}</div>
                    </td>

                    <td class="p-3 border">
                        <div class="flex flex-wrap gap-2 mb-3">
                            {{#each this.numbers}}
                                <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-bold border border-green-200">
                                    {{this.szam}}
                                    <a href="{{@root.basePath}}/crud/delete-number/{{this.id}}" class="text-red-500 ml-1 hover:text-red-700 font-bold" title="Törlés">x</a>
                                </span>
                            {{/each}}
                        </div>

                        <form action="{{@root.basePath}}/crud/add-number/{{this.id}}" method="POST" class="flex gap-2">
                            <input type="number" name="szam" placeholder="Új szám" required class="border p-1 rounded text-xs w-20">
                            <button type="submit" class="bg-green-600 text-white px-2 py-1 rounded text-xs hover:bg-green-700">+</button>
                        </form>
                    </td>

                    <td class="p-3 border">
                        <div class="space-y-1 mb-3">
                            {{#each this.prizes}}
                                <div class="flex justify-between items-center bg-yellow-50 p-1 rounded border border-yellow-100 text-xs">
                                    <span><b>{{this.talalat}}</b> tal.: {{this.ertek}} Ft ({{this.darab}} db)</span>
                                    <a href="{{@root.basePath}}/crud/delete-prize/{{this.id}}" class="text-red-500 hover:text-red-700 font-bold px-1">x</a>
                                </div>
                            {{/each}}
                        </div>

                        <form action="{{@root.basePath}}/crud/add-prize/{{this.id}}" method="POST" class="flex flex-col gap-2 bg-gray-50 p-2 rounded border">
                            <div class="flex gap-2">
                                <select name="talalat" class="border p-1 rounded text-xs w-full">
                                    <option value="6">6 találat</option>
                                    <option value="5">5 találat</option>
                                    <option value="4">4 találat</option>
                                    <option value="3">3 találat</option>
                                </select>
                                <input type="number" name="darab" placeholder="Db" required class="border p-1 rounded text-xs w-full">
                            </div>
                            <div class="flex gap-2">
                                <input type="number" name="ertek" placeholder="Összeg (Ft)" required class="border p-1 rounded text-xs w-full">
                                <button type="submit" class="bg-yellow-600 text-white px-3 py-1 rounded text-xs hover:bg-yellow-700 font-bold">Mentés</button>
                            </div>
                        </form>
                    </td>

                    <td class="p-3 border text-center align-middle">
                        asd
                        <a href="{{@root.basePath}}/crud/delete/{{this.id}}"
                           onclick="return confirm('FIGYELEM! Ha törlöd a húzást, az összes hozzá tartozó szám és nyeremény is törlődik! Biztos folytatod?')"
                           class="bg-red-500 text-white px-3 py-1 rounded text-xs hover:bg-red-600 font-bold">
                            Húzás Törlése
                        </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>