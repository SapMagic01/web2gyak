<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-md">
    <h2 class="text-3xl font-bold text-indigo-700 mb-6 text-center">Kapcsolat</h2>
    <p class="text-center text-gray-600 mb-8">Kérdése van a statisztikákkal kapcsolatban? Írjon nekünk!</p>

    {{#if msg}}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 text-center">
            {{msg}}
        </div>
    {{/if}}

    <form action="{{basePath}}/kapcsolat" method="POST" class="space-y-6">
        <div>
            <label class="block text-gray-700 font-bold mb-2">Név</label>
            <input type="text" name="name" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
        </div>

        <div>
            <label class="block text-gray-700 font-bold mb-2">E-mail cím</label>
            <input type="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none">
        </div>

        <div>
            <label class="block text-gray-700 font-bold mb-2">Üzenet</label>
            <textarea name="text" rows="5" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none"></textarea>
        </div>

        <button type="submit" class="w-full bg-indigo-600 text-white font-bold py-3 rounded-lg hover:bg-indigo-800 transition duration-300">
            Üzenet Küldése
        </button>
    </form>
</div>